@model UserModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "User Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.IsActiveOutput) @* property for formatted or extra data in the service *@
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.IsActiveOutput) @* property for formatted or extra data in the service *@
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.RoleNameOutput) @* property for formatted or extra data in the service *@
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.RoleNameOutput) @* property for formatted or extra data in the service *@
        </dd>
    </dl>
</div>
<div>

    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>&nbsp;|&nbsp;
    @* ? means Model object of type UserModel can be null, therefore it prevents null reference exception *@

    <a asp-action="GetList">Back to List</a>
</div>



